@model IdentitySample.Models.TableViewModel<Translation>
@using PagedList.Mvc;
@using PagedList;
@using IdentitySample.Helpers;
@using IdentitySample.Resx;
@using IdentitySample.Entities;

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TableData[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TableData[0].Language)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.TableData)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @item.Language.GetDisplayName()
                </td>

                <td>
                    @Html.ActionLink(AppResource.Edit, "Edit", Model.ChildController, new { id = item.Id }, null) |
                    @Html.ActionLink(AppResource.Delete, "Delete", Model.ChildController, new { id = item.Id }, null)
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3">
                @Html.Partial("_TableFooter", @Html.ConvertToPageFoter<Translation>(Model))
            </td>
        </tr>
    </tfoot>
</table>