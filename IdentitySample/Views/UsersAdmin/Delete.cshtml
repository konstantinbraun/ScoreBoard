@model IdentitySample.Models.ApplicationUser
@using IdentitySample.Resx
@{
    ViewBag.Title = AppResource.Delete;
}

<h2>@AppResource.Delete</h2>

<h3>@AppResource.DeleteConfirmation</h3>
<div>
    <h4>User.</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.UserName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="@AppResource.Delete" class="btn btn-default" /> |
            @Html.ActionLink(AppResource.BackToList, "Index", "Administration", new { active = "Users" }, null)
        </div>
    }
</div>
