@model IdentitySample.Models.RefereeViewModel 
@using IdentitySample.Resx
@{
    ViewBag.Title = AppResource.Edit;
}

<h2>@AppResource.Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Referee.Id)
    @Html.HiddenFor(model => model.Referee.TournamentId)
    <div class="form-horizontal">
        <h4>@AppResource.Referee</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.Referee.RefereeEmail, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.Referee.RefereeEmail, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Referee.RefereeEmail, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Referee.PositionId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.Referee.PositionId, Model.PositionList, null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Referee.PositionId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value=@AppResource.Save class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink(@AppResource.BackToList, "Details", "Tournaments", new { id = Model.Referee.TournamentId, active="Referees" }, null)
</div>

